from tkinter import *
wwin2=Tk()
wwin2.title("Blood sugar")
wwin2.geometry("1000X1000")
def rbs():
    labl1=Label(wwin2,text="Enter your blood sugar")
    labl1.pack()
    entrr1=Entry(wwin2)
    entrr1.pack()
    bs=entrr1.get()
    if bs<3:
        labl2=Label(wwin2,text="Severely hypoglycemic. Eat more cake")
        lab12.pack()
    if bs in range(3,4):
        labl2=Label(wwin2,text="Hypoglycemic. Take care of yourself!")
        lab12.pack()
    if bs in range(4,7):
        labl2=Label(wwin2,text="Normal blood sugar levels. Good job!")
        lab12.pack()
    if bs in range(7,10):
        labl2=Label(wwin2,text="Hyperglycemic. Maybe you should not eat that cake slice after all")
        lab12.pack()
    if bs>10:
        labl2=Label(wwin2,text="Severely hyperglycemic. Oops")
        lab12.pack()
def fbs():
    labl1=Label(wwin2,text="Enter your blood sugar")
    labl1.pack()
    entrr1=Entry(wwin2)
    entrr1.pack()
    bs=entrr1.get()
    if bs in range(1,4):
        labl2=Label(wwin2,text="Hypoglycemic. Eat more cake")
        lab12.pack()
    if bs in range(4,5):
        labl2=Label(wwin2,text="Normal blood sugar levels. Good job!")
        lab12.pack()
    if bs in range(5,7):
        labl2=Label(wwin2,text="Hyperglycemic. Maybe you should not eat that cake slice after all")
        lab12.pack()
    if bs>7:
        labl2=Label(wwin2,text="Severely hyperglycemic. Oops")
        lab12.pack()
def ppbs():
    labl1=Label(wwin2,text="Enter your blood sugar")
    labl1.pack()
    entrr1=Entry(wwin2)
    entrr1.pack()
    bs=entrr1.get()
    if bs in range(3,7):
        labl2=Label(wwin2,text="Hypoglycemic. Take care of yourself!")
        lab12.pack()
    if bs in range(7,11):
        labl2=Label(wwin2,text="Normal blood sugar levels. Good job!")
        lab12.pack()
    if bs in range(11,16):
        labl2=Label(wwin2,text="Hyperglycemic. Maybe you should not eat that cake slice after all")
        lab12.pack()
    if bs>16:
        labl2=Label(wwin2,text="Severely hyperglycemic. Oops")
        lab12.pack()      
rad1=Radiobutton(wwin2,text="Random",command=rbs,variable=v0,value=1)
rad1.pack()
rad2=Radiobutton(wwin2,text="Fasting",command=fbs,variable=v0,value=2)
rad2.pack()
rad3=Radiobutton(wwin2,text="Postprandial",command=ppbs,variable=v0,value=3)
rad3.pack()

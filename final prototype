    #sugar-monitor

    #timer
    import time
    # creating Tk window
    root = Tk()
    root.geometry("200x200")
    root.configure(background="black")
    root.title("Time Counter")

        # Declaration of variables
    hour = StringVar()
    minute = StringVar()
    second = StringVar()

        # setting the default value as 0
    hour.set("00")
    minute.set("00")
    second.set("00")

        # Use of Entry class to take input from the user
    hourEntry = Entry(timer, width=3, bg="grey",textvariable=hour)
    hourEntry.place(x=30, y=20)
    minuteEntry = Entry(timer, width=3, bg="grey", textvariable=minute)
    minuteEntry.place(x=80, y=20)
    secondEntry = Entry(timer, width=3, bg="grey", textvariable=second)
    secondEntry.place(x=130, y=20)

    def submit():
        try:
            temp = int(hour.get()) * 3600 + int(minute.get()) * 60 + int(second.get())
        except:
            print("Please input the right value")
        while temp > -1:

                # divmod(firstvalue = temp//60, secondvalue = temp%60)
            mins, secs = divmod(temp, 60)
            hours = 0
            if mins > 60:
                hours, mins = divmod(mins, 60)

            hour.set("{0:2d}".format(hours))
            minute.set("{0:2d}".format(mins))
            second.set("{0:2d}".format(secs))

            timer.update()
            time.sleep(1)
            if (temp == 0):
                messagebox.showinfo("Time Countdown", "Time's up ")

            temp -= 1


        # button widget
    btn = Button(timer, text='Set Time Countdown', bg="red3", bd='10', command=submit)
    btn.place(x=40, y=90)

root.mainloop()
